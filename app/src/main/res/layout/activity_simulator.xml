<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimulatorActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/borrower_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:textAlignment="center"
            android:textColor="#A60404"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/borrower_debt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:textAlignment="center"
            android:textColor="#A60404"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/comm_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Prowizja (%)">

        </EditText>

        <EditText
            android:id="@+id/speed_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Prędkość (zł/sec)">

        </EditText>
        <Button
            android:id="@+id/simulate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#119c15"
            android:text="Symulacja!">

        </Button>

        <Button
            android:id="@+id/pause_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Zatrzymaj symulację">

        </Button>

        <TextView
            android:id="@+id/sim_textid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center|center_horizontal"
            android:textAlignment="center"
            android:textColor="#A60404"
            android:textSize="25dp">

        </TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>